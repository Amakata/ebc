    # filter "pandoc-filter.rb"

    hyoushi_image_page "h01" do
	  file "sample1.jpg"
	  topoffset "-0.8mm"
	  leftoffset "2.1mm"
    end
    hyoushi_empty_page "h02" do
	  no_page_number
    end
    hyoushi_inner_title_page "title"
    urahyoushi_empty_page "h03" do
	  no_page_number
    end
    urahyoushi_image_page "h04" do#
