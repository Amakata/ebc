book "hyoushi" do
  md_file "hyoushi"
  img_file "hyoushi.png"

  latex_converter "latex" do
	documentclass "utbook"
    classoption "10pt"
	classoption "twocolumn" 
	classoption "twoside"
	classoption "a5j"
   
    hyoushi_image_page "h01" do
	  file "hyoushi.png"
	  topoffset "-0.8mm"
	  leftoffset "2.1mm"
	end
	urahyoushi_image_page "h02" do#
	  file "hyoushi.png"
	  topoffset "-0.8mm"
	  leftoffset "2.1mm"
	end
  end

epub_converter "epub" do
  end
end

book "title" do
  title "タイトル サンプル"
  author "天方 貴久"
  abstract "テストのアブストラクトです。長い文のアブストラクトだとどういう表示になるのかをテストしています。これくらいで大丈夫かな。テストテスト"

  md_file "title"

  latex_converter "latex" do
	documentclass "utbook"
    classoption "10pt"
	classoption "twocolumn" 
	classoption "twoside"
	classoption "a5j"
   	
	hyoushi_inner_title_page "title"
  end

  epub_converter "epub" do
  end
end

book "emptypage" do

  md_file "emptypage"

  latex_converter "latex" do
	documentclass "utbook"
    classoption "10pt"
	classoption "twocolumn" 
	classoption "twoside"
	classoption "a5j"
   	
    hyoushi_empty_page "h01" do
	  no_page_number
	end
    hyoushi_empty_page "h02" do
	end
  end

  epub_converter "epub" do
  end
end

book "toc" do

  md_file "toc"

  latex_converter "latex" do
	documentclass "utbook"
    classoption "10pt"
	classoption "twocolumn" 
	classoption "twoside"
	classoption "a5j"
    postchaptername "話"
  end

  epub_converter "epub" do
  end
end

book "column" do

  md_file "column"
  img_file "sample1.jpg"
  img_file "sample2.jpg"
  img_file "sample3.jpg"
  

  latex_converter "latex" do
	documentclass "utbook"
    classoption "10pt"
	classoption "twocolumn" 
	classoption "twoside"
	classoption "a5j"
   end

  latex_converter "latex" do
	documentclass "ujbook"
    classoption "10pt"
	classoption "twocolumn" 
	classoption "twoside"
	classoption "a5j"
    output "column-yoko"
  end

  epub_converter "epub" do
  end
end

