book "furigana" do
  title "ふりがな サンプル"

  md_file "furigana"

  latex_converter "latex" do
	documentclass "utbook"
    classoption "11pt"
	classoption "twocolumn" 
	classoption "twoside"
	classoption "a5j"
  end

  epub_converter "epub" do
  end
end

