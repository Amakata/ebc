book "hyoushi" do
  title "表紙 サンプル"
  author "天方 貴久"
  abstract "テストのアブストラクトです。長い文のアブストラクトだとどういう表示になるのかをテストしています。これくらいで大丈夫かな。テストテスト"

  md_file "hyoushi"
  img_file "hyoushi.png"

  latex_converter "latex" do
	documentclass "utbook"
    classoption "10pt"
	classoption "twocolumn" 
	classoption "twoside"
	classoption "a5j"
    postchaptername "話"
	
    output "hyoushi.pdf"
    hyoushi_image_page "p01" do
	  file "hyoushi.png"
	  topoffset "-0.8mm"
	  leftoffset "2.1mm"
	end
    hyoushi_empty_page "h02" do
	  no_page_number
	end

#	hyoushi_inner_title_page "p03" do
#	end
#    urahyoushi_empty_page "h03" do
#	  no_page_number
#	end
#	urahyoushi_image_page "h04" do#
#	  file "urahyoushi.png"
#g	end
  end

  epub_converter "epub" do
  end
end

